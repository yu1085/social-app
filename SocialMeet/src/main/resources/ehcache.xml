<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd">

    <!-- 默认缓存配置 -->
    <cache-template name="defaultTemplate">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- 用户缓存 -->
    <cache alias="users" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache>

    <!-- 动态缓存 -->
    <cache alias="dynamics" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache>

    <!-- 动态列表缓存 -->
    <cache alias="dynamicLists" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- 用户卡片缓存 -->
    <cache alias="userCards" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">3000</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <!-- 验证码缓存 -->
    <cache alias="verificationCodes" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">10000</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- JWT Token缓存 -->
    <cache alias="jwtTokens" uses-template="defaultTemplate">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">50000</heap>
            <offheap unit="MB">100</offheap>
        </resources>
    </cache>

</config>
