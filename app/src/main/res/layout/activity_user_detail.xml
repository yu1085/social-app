<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

         <!-- 可滑动的内容区域 -->
     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentTop="true"
         android:layout_above="@id/bottom_action_bar"
         android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 用户图片区域 - 占屏幕2/3 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#E3F2FD">

                 <!-- 右上角菜单按钮 -->
                 <LinearLayout
                     android:id="@+id/ll_menu_button"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_gravity="top|end"
                     android:layout_margin="16dp"
                     android:background="@drawable/menu_button_bg"
                     android:gravity="center"
                     android:clickable="true"
                     android:focusable="true"
                     android:elevation="8dp"
                     android:translationZ="8dp">

                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:src="@drawable/ic_more_vert" />

                 </LinearLayout>

                <!-- ViewPager2 用于图片左右滑动 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 图片指示器 -->
                <LinearLayout
                    android:id="@+id/indicator_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <View
                        android:id="@+id/indicator_1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/indicator_active" />

                    <View
                        android:id="@+id/indicator_2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/indicator_inactive" />

                    <View
                        android:id="@+id/indicator_3"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/indicator_inactive" />

                </LinearLayout>

                                 <!-- 状态标签 -->
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="bottom|start"
                     android:layout_margin="16dp"
                     android:background="@drawable/status_badge_bg_design"
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:paddingHorizontal="16dp"
                     android:paddingVertical="8dp">

                     <View
                         android:layout_width="18dp"
                         android:layout_height="18dp"
                         android:layout_marginEnd="8dp"
                         android:background="@drawable/status_indicator_green" />

                     <TextView
                         android:id="@+id/tv_user_status"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/user_detail_status_free"
                         android:textColor="#FFFFFF"
                         android:textSize="14sp"
                         android:textStyle="bold" />

                 </LinearLayout>

            </FrameLayout>

            <!-- 用户详情区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 用户名和基本信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不吃香菜"
                        android:textColor="#212121"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                                         <!-- 年龄和位置信息 -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center_vertical"
                         android:layout_marginBottom="8dp">

                         <ImageView
                             android:layout_width="20dp"
                             android:layout_height="20dp"
                             android:src="@drawable/ic_age"
                             android:layout_marginEnd="8dp" />

                         <TextView
                             android:id="@+id/tv_user_age"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="25岁"
                             android:textColor="#74777C"
                             android:textSize="14sp" />

                         <View
                             android:layout_width="1dp"
                             android:layout_height="16dp"
                             android:layout_marginHorizontal="16dp"
                             android:background="#E0E0E0" />

                         <ImageView
                             android:layout_width="18dp"
                             android:layout_height="18dp"
                             android:src="@drawable/vector_3"
                             android:layout_marginEnd="8dp" />

                         <TextView
                             android:id="@+id/tv_user_location"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="北京"
                             android:textColor="#74777C"
                             android:textSize="14sp" />

                     </LinearLayout>

                </LinearLayout>

                <!-- 关于TA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于TA"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_user_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我是一个活泼开朗的女孩，喜欢聊天和交朋友。希望能遇到有趣的人一起分享生活的美好。"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- TA的标签 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TA的标签"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                                                 <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="活泼"
                             android:textColor="#212121"
                             android:textSize="14sp"
                             android:background="@drawable/tag_background"
                             android:paddingHorizontal="16dp"
                             android:paddingVertical="8dp"
                             android:layout_marginEnd="12dp" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="开朗"
                             android:textColor="#212121"
                             android:textSize="14sp"
                             android:background="@drawable/tag_background"
                             android:paddingHorizontal="16dp"
                             android:paddingVertical="8dp"
                             android:layout_marginEnd="12dp" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="爱聊天"
                             android:textColor="#212121"
                             android:textSize="14sp"
                             android:background="@drawable/tag_background"
                             android:paddingHorizontal="16dp"
                             android:paddingVertical="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- TA的礼物 -->
                <LinearLayout
                    android:id="@+id/ll_gifts_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TA的礼物"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- 礼物项 -->
                            <LinearLayout
                                android:id="@+id/ll_gift_heart"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/gift_item_background"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_gift"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="爱心"
                                    android:textColor="#2196F3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_gift_rose"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/gift_item_background"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_gift"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="玫瑰"
                                    android:textColor="#2196F3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_gift_cake"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/gift_item_background"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_gift"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="蛋糕"
                                    android:textColor="#2196F3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <!-- TA的守护者 -->
                <LinearLayout
                    android:id="@+id/ll_guardian_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TA的守护者"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/guardian_background"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_guardian"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="守护者小王"
                            android:textColor="#212121"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 用户ID区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_user_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ID: 0009931214"
                        android:textColor="#74777C"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/ll_copy_id_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/copy_button_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_copy"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="复制"
                            android:textColor="#2196F3"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

         <!-- 底部固定的操作栏 -->
     <LinearLayout
         android:id="@+id/bottom_action_bar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:orientation="vertical"
         android:background="#E3F2FD"
         android:elevation="8dp"
         android:padding="16dp">

         <!-- 按钮区域 -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical">

                                  <!-- 发起视频按钮 -->
          <LinearLayout
              android:id="@+id/ll_video_button"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@drawable/button_primary_bg"
              android:gravity="center"
              android:orientation="vertical"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginEnd="12dp"
              android:padding="16dp">

                             <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center_vertical">

                   <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:src="@drawable/ic_video"
                       android:layout_marginEnd="16dp" />

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:gravity="center">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="发起视频"
                           android:textColor="#FFFFFF"
                           android:textSize="18sp"
                           android:textStyle="bold" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="500/分钟"
                           android:textColor="#FFFFFF"
                           android:textSize="14sp"
                           android:textStyle="bold" />

                   </LinearLayout>

               </LinearLayout>

          </LinearLayout>

         <!-- 私信她按钮 -->
         <LinearLayout
             android:id="@+id/ll_message_button"
             android:layout_width="56dp"
             android:layout_height="56dp"
             android:background="@drawable/button_secondary_bg"
             android:gravity="center"
             android:orientation="vertical"
             android:clickable="true"
             android:focusable="true"
             android:layout_marginEnd="8dp">

                           <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/ic_message_black"
                  android:layout_marginBottom="4dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="私信她"
                  android:textColor="#212121"
                  android:textSize="12sp" />

         </LinearLayout>

         <!-- 喜欢按钮 -->
         <LinearLayout
             android:id="@+id/ll_like_button"
             android:layout_width="56dp"
             android:layout_height="56dp"
             android:background="@drawable/button_secondary_bg"
             android:gravity="center"
             android:orientation="vertical"
             android:clickable="true"
             android:focusable="true">

                           <ImageView
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/ic_heart_black"
                  android:layout_marginBottom="4dp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="喜欢"
                  android:textColor="#212121"
                  android:textSize="12sp" />

         </LinearLayout>

         </LinearLayout>

     </LinearLayout>

</RelativeLayout>
