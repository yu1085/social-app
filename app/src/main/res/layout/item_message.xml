<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp">

    <!-- 头像 -->
    <FrameLayout
        android:layout_width="92dp"
        android:layout_height="92dp">

        <View
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avatar_default_bg" />

        <!-- 未读消息数量 -->
        <TextView
            android:id="@+id/tv_unread_count"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/unread_badge_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/message_text_white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </FrameLayout>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp" />

    <!-- 消息内容 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/message_text_secondary"
            android:textSize="52sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="4dp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="消息内容"
            android:textColor="@color/message_text_tertiary"
            android:textSize="48sp" />

    </LinearLayout>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp" />

    <!-- 时间和状态 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:textColor="@color/message_text_tertiary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- 在线状态指示器 -->
        <View
            android:id="@+id/iv_online_status"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/online_status_indicator"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
