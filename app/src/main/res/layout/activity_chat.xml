<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#00000000">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:text="00:37"
            android:textColor="#000000"
            android:textSize="14sp" />
            
        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_signal" />
            
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_wifi" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            android:text="40"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 头部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true" />

        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />

        <!-- 用户头像和亲密分数 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/group_27"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_heart"
                    android:tint="#FF69B4" />

                <TextView
                    android:id="@+id/tv_intimacy_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="45°C"
                    android:textColor="#FF69B4"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/avatar_placeholder" />
            </LinearLayout>

            <!-- 用户姓名 -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="用户名"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" />

        <!-- 加为知友按钮 -->
        <TextView
            android:id="@+id/tv_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_primary_bg"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="加为知友"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true" />

        <!-- 更多选项 -->
        <ImageView
            android:id="@+id/iv_more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 通话按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/ll_video_call"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="#F5F5F5"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频通话: 150/分钟"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice_call"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#F5F5F5"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音通话: 150/分钟"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 亲密度通知 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#E3F2FD"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎉"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="哇~恭喜,你们亲密度达到&quot;LV.2 相识&quot;"
                android:textColor="#1976D2"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 聊天内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- 这里可以添加聊天消息列表 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="聊天记录将在这里显示"
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 底部输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F8F9FA">

        <!-- 快速回复建议 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_up" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/ll_quick_reply_1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#F5F5F5"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你在哪里呀?"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quick_reply_2"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#F5F5F5"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你平时什么时候比较空闲"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quick_reply_3"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="#F5F5F5"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吃饭了"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

                 <!-- 主输入栏 -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:orientation="horizontal"
             android:background="#FFFFFF"
             android:gravity="center_vertical"
             android:paddingHorizontal="12dp">

             <!-- 语音输入按钮 -->
             <LinearLayout
                 android:id="@+id/ll_voice_input"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@drawable/ic_mic" />
             </LinearLayout>

             <Space android:layout_width="8dp" android:layout_height="wrap_content" />

             <!-- 文本输入框 -->
             <EditText
                 android:layout_width="0dp"
                 android:layout_height="36dp"
                 android:layout_weight="1"
                 android:background="#F5F5F5"
                 android:hint="输入消息..."
                 android:paddingHorizontal="12dp"
                 android:textSize="14sp" />

             <Space android:layout_width="8dp" android:layout_height="wrap_content" />

             <!-- 表情按钮 -->
             <LinearLayout
                 android:id="@+id/ll_emoji_button"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@drawable/ic_emoji" />
             </LinearLayout>
         </LinearLayout>

         <!-- 底部图标栏 -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:orientation="horizontal"
             android:background="#FFFFFF"
             android:gravity="center_vertical"
             android:paddingHorizontal="8dp">

             <!-- 语音聊天图标 -->
             <LinearLayout
                 android:id="@+id/ll_voice_chat"
                 android:layout_width="0dp"
                 android:layout_height="48dp"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@drawable/ic_mic"
                     android:tint="#2196F3" />
             </LinearLayout>

             <!-- 视频聊天图标 -->
             <LinearLayout
                 android:id="@+id/ll_video_chat"
                 android:layout_width="0dp"
                 android:layout_height="48dp"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@drawable/ic_video"
                     android:tint="#2196F3" />
             </LinearLayout>

             <!-- 礼物图标 -->
             <LinearLayout
                 android:id="@+id/ll_gift_button"
                 android:layout_width="0dp"
                 android:layout_height="48dp"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@drawable/ic_gift"
                     android:tint="#FF69B4" />
             </LinearLayout>

             <!-- 发送图片图标 -->
             <LinearLayout
                 android:id="@+id/ll_send_image"
                 android:layout_width="0dp"
                 android:layout_height="48dp"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:clickable="true"
                 android:focusable="true">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:src="@drawable/ic_image"
                     android:tint="#4CAF50" />
             </LinearLayout>
         </LinearLayout>
    </LinearLayout>
</LinearLayout>
