<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="返回"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="筛选条件"
            android:textSize="18sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toTopOf="@id/button_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 性别筛选 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/gender_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/gender_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="不限"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/gender_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="男"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/gender_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="女"
                    android:textSize="14sp" />

            </RadioGroup>

            <!-- 地区筛选 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/location_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/location_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:textSize="14sp"
                    android:checked="true"
                    android:paddingVertical="8dp" />

                <RadioButton
                    android:id="@+id/location_beijing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北京"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <RadioButton
                    android:id="@+id/location_shanghai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <RadioButton
                    android:id="@+id/location_guangzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="广州"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <RadioButton
                    android:id="@+id/location_shenzhen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="深圳"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <RadioButton
                    android:id="@+id/location_hangzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="杭州"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

            </RadioGroup>

            <!-- 年龄范围 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄范围"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 最小年龄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小："
                    android:textSize="14sp"
                    android:textColor="#74777C" />

                <TextView
                    android:id="@+id/min_age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18岁"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/min_age_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- 最大年龄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大："
                    android:textSize="14sp"
                    android:textColor="#74777C" />

                <TextView
                    android:id="@+id/max_age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50岁"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/max_age_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="16sp"
            android:textColor="#212121"
            android:background="@drawable/button_secondary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
