<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 远端视频（全屏显示） -->
    <FrameLayout
        android:id="@+id/remoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 本地视频（小窗悬浮） -->
    <FrameLayout
        android:id="@+id/localVideoView"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 房间信息 -->
    <TextView
        android:id="@+id/roomInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#88000000"
        android:padding="8dp"
        android:text="房间: 等待连接..."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 通话时长 -->
    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#88000000"
        android:padding="8dp"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roomInfoText" />

    <!-- 底部控制面板 -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 静音按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/muteAudioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="静音"
            android:src="@android:drawable/ic_btn_speak_now"
            app:backgroundTint="#4CAF50"
            app:fabSize="normal"
            app:tint="#FFFFFF" />

        <!-- 挂断按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/hangUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="挂断"
            android:src="@android:drawable/ic_menu_call"
            app:backgroundTint="#F44336"
            app:fabSize="normal"
            app:tint="#FFFFFF" />

        <!-- 切换摄像头按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/switchCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="切换摄像头"
            android:src="@android:drawable/ic_menu_rotate"
            app:backgroundTint="#2196F3"
            app:fabSize="normal"
            app:tint="#FFFFFF" />

        <!-- 关闭/开启视频按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/muteVideoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="视频开关"
            android:src="@android:drawable/ic_menu_camera"
            app:backgroundTint="#FF9800"
            app:fabSize="normal"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- 连接状态提示 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:padding="16dp"
        android:text="等待对方加入..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
