<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="返回"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="语音速配"
            android:textSize="18sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="24dp" />

    </LinearLayout>

    <!-- 主内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 语音图标 -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/frame_2_icon"
            android:layout_marginBottom="32dp" />

        <!-- 在线人数 -->
        <TextView
            android:id="@+id/online_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1153人在线"
            android:textSize="20sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 价格区间 -->
        <TextView
            android:id="@+id/price_range_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格区间：50-200金币/分钟"
            android:textSize="14sp"
            android:textColor="#74777C"
            android:layout_marginBottom="48dp" />

        <!-- 匹配进度条 -->
        <ProgressBar
            android:id="@+id/matching_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- 匹配状态文字 -->
        <TextView
            android:id="@+id/matching_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在为您匹配合适的用户..."
            android:textSize="16sp"
            android:textColor="#212121"
            android:visibility="gone"
            android:layout_marginBottom="32dp" />

        <!-- 开始匹配按钮 -->
        <Button
            android:id="@+id/start_match_button"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="开始匹配"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="16dp" />

        <!-- 取消匹配按钮 -->
        <Button
            android:id="@+id/cancel_match_button"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="取消匹配"
            android:textSize="18sp"
            android:textColor="#212121"
            android:background="@drawable/button_secondary"
            android:visibility="gone" />

        <!-- 说明文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统将自动为您匹配在线的用户"
            android:textSize="12sp"
            android:textColor="#BDBDBF"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
